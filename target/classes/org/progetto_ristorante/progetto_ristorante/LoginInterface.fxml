<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-color: #ccc;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Title -->
    <Text text="LOGIN" style="-fx-font-size: 28px; -fx-fill: #008000; -fx-padding: 10 0 20 0; -fx-font-family: 'sans-serif'; -fx-font-weight: bold"/>
    <!-- Title -->

    <!-- Username and Password -->
    <TextField fx:id="loginUsername" promptText="Username" style="-fx-font-size: 20px; -fx-background-color: #fff; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'sans-serif'" maxWidth="150"/>
    <PasswordField fx:id="loginPassword" promptText="Password" style="-fx-font-size: 20px; -fx-background-color: #fff; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8" maxWidth="150"/>
    <!-- Username and Password -->

    <!-- Buttons -->
    <HBox spacing="5.0" alignment="CENTER">
        <Button text="Accedi" onAction="#login" style="-fx-font-size: 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-family: 'sans-serif'"/>
        <Button text="Registrati" onAction="#showRegisterInterface" style="-fx-font-size: 20px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-family: 'sans-serif'"/>
    </HBox>
    <!-- Buttons -->

    <!-- Error Messages -->
    <Text fx:id="loginError" visible="false" fill="red" style="-fx-font-family: 'sans-serif'; -fx-font-size: 20px"/>
    <!-- Error Messages -->
</VBox>
