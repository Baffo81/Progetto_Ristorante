<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController"
      style="-fx-background-color: #F5DEB3; -fx-padding: 20">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Order to Prepare -->
    <Text text="Ordini da preparare:" style="-fx-font-size: 30px; -fx-fill: #32CD32; -fx-font-family: 'Arial'; -fx-font-weight: bold"/>
    <ListView style="-fx-font-size: 28px; -fx-font-family: 'Arial'"
              minWidth="0" prefWidth="808" maxWidth="808"/>
    <!-- Order to Prepare -->
</VBox>
