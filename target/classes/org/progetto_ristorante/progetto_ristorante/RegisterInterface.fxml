<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController" style="-fx-background-color: #F5F5DC;">

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Title -->
    <Text text="REGISTRAZIONE" style="-fx-font-size: 28px; -fx-fill: black; -fx-padding: 10 0 20 0;"/>
    <!-- Title -->

    <!-- Username and Password -->
    <TextField fx:id="registerUsername" style="-fx-font-size: 14px; -fx-background-color: #E6E6FA;"/>
    <PasswordField fx:id="registerPassword" style="-fx-font-size: 14px; -fx-fill: #008000;"/>
    <!-- Username and Password -->

    <!-- Commit Button -->
    <Button text="Registrati" onAction="#register" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Button text="Accedi" onAction="#showLoginInterface" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <!-- Commit Button -->

    <!-- Error Messages -->
    <Text fx:id="registerError" text="Registrazione giÃ  effettuata," visible="false" fill="red"/>
    <!-- Error Messages -->
</VBox>
