<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="5.0" fx:id="chefInterface" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController"
      style="-fx-background-color: #F5F5DC;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Logo
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="images/logo.png"/>
    </ImageView>
    < Logo -->

    <!-- Title -->
    <Text text="SCRITTURA DEL MENU" style="-fx-font-size: 28px; -fx-fill: #1E90FF; -fx-padding: 10 0 20 0; -fx-font-weight: bold;"/>
    <!-- Title -->

    <!-- Order and Price Writing -->
    <TextField fx:id="menuOrderField"  style="-fx-font-size: 20px; -fx-background-color: #E6E6FA; -fx-font-family: 'sans-serif'" maxWidth="250" promptText="Ordine"/>
    <TextField fx:id="orderPriceField" style="-fx-font-size: 20px; -fx-background-color: #E6E6FA; -fx-font-family: 'sans-serif'" maxWidth="250" promptText="Prezzo"/>
    <!-- Order and Price Writing -->

    <!-- Commit Buttons -->
    <HBox spacing="20.0" alignment="CENTER">
        <Button text="Conferma" onAction="#addOrder" style="-fx-font-size: 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'sans-serif'"/>
        <Button text="Fine"     onAction="#cook"     style="-fx-font-size: 20px; -fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-family: 'sans-serif'"/>
    </HBox>
    <!-- Commit Buttons -->
</VBox>
