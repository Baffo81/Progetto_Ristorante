      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController" style="-fx-background-color: #F5F5DC;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Order's Writing -->
    <Label text="Inserisci il nome del piatto da inserire nel menÃ¹ o fine per terminare" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="menuOrderField" style="-fx-font-size: 14px"/>
    <!-- Order's Writing -->

    <!-- Price's Writing -->
    <Label text="Indica il prezzo dell'ordine" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="orderPriceField"         style="-fx-font-size: 14px"/>
    <!-- Price's Writing -->

    <!-- Commit Buttons -->
    <Button text="Conferma" onAction="#addOrder"/>
    <Button text="Fine"     onAction="#cook"/>
    <!-- Commit Buttons -->
</VBox>
