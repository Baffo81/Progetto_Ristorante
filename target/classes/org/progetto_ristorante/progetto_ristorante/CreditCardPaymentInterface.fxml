<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #F5DEB3; -fx-padding: 20; -fx-border-color: #D2B48C; -fx-border-width: 2; -fx-border-radius: 10;">


    <!-- Card Details -->
    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Inserisci i dati della carta di credito" style="-fx-font-size: 30px; -fx-fill: #32CD32; -fx-font-family: 'Helvetica'; -fx-font-weight: bold"/>

        <HBox spacing="10">
            <Label text="Numero Carta:" style="-fx-font-size: 20px;"/>
            <TextField fx:id="cardNumberField" style="-fx-font-size: 20px;"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Nome sul Carta:" style="-fx-font-size: 20px;"/>
            <TextField fx:id="cardNameField" style="-fx-font-size: 20px;"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Scadenza (MM/YY):" style="-fx-font-size: 20px;"/>
            <TextField fx:id="expiryDateField" style="-fx-font-size: 20px;"/>
        </HBox>

        <HBox spacing="10">
            <Label text="CVV:" style="-fx-font-size: 20px;"/>
            <TextField fx:id="cvvField" style="-fx-font-size: 20px;"/>
        </HBox>
    </VBox>
    <!-- Card Details -->

    <!-- Pay Button -->
    <Button text="Paga" onAction="#pay"
            style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Helvetica'; -fx-border-color: #228B22; -fx-border-width: 1; -fx-alignment: CENTER"/>
    <!-- Pay Button -->

    <!-- Payment Confirmation Message -->
    <Label fx:id="paymentConfirmationLabel" style="-fx-font-size: 20px; -fx-font-family: 'Helvetica'; -fx-text-fill: #32CD32;" visible="false"/>
    <!-- Payment Confirmation Message -->
</VBox>
