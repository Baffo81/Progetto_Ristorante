<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController"
      style="-fx-background-color: #F5DEB3; -fx-padding: 20">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Order and Price Writing -->
    <VBox fx:id="order" spacing="20.0" alignment="CENTER">
        <HBox spacing="10.0" alignment="CENTER">
            <VBox spacing="10.0" alignment="CENTER">
                <Text text="PIATTO:" style="-fx-font-size: 30px; -fx-fill: #32CD32; -fx-font-family: 'Helvetica'; -fx-font-weight: bold"/>
                <TextField fx:id="menuOrderField" style="-fx-font-size: 30px; -fx-padding: 10px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-prompt-text-fill: #808080; -fx-background-color: #FAEBD7; -fx-font-family: 'Helvetica'; -fx-border-color: #D2B48C; -fx-border-width: 1;"
                           minWidth="0" prefWidth="400" maxWidth="400" promptText="Inserisci il piatto" focusTraversable="false"/>
            </VBox>
            <VBox spacing="10.0" alignment="CENTER">
                <Text text="PREZZO:" style="-fx-font-size: 30px; -fx-fill: #32CD32; -fx-font-family: 'Helvetica'; -fx-font-weight: bold"/>
                <HBox spacing="5.0" alignment="CENTER">
                    <TextField fx:id="orderPriceField" style="-fx-font-size: 30px; -fx-padding: 10px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-prompt-text-fill: #808080; -fx-background-color: #FAEBD7; -fx-font-family: 'Helvetica'; -fx-text-fill: #333333; -fx-border-color: #D2B48C; -fx-border-width: 1;"
                               minWidth="0" prefWidth="150" maxWidth="150" promptText="Prezzo" focusTraversable="false"/>
                    <Text text="â‚¬" style="-fx-font-size: 30px; -fx-fill: #333333; -fx-font-family: 'Helvetica';"/>
                </HBox>
            </VBox>
        </HBox>
        <Button text="Conferma piatto" onAction="#addOrder"
                style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Helvetica'; -fx-border-color: #228B22; -fx-border-width: 1"
                prefWidth="280"/>
    </VBox>
    <!-- Order and Price Writing -->

    <!-- Error Message -->
    <Text fx:id="invalidData" visible="false" fill="#FF0000" style="-fx-font-family: 'Helvetica'; -fx-font-size: 30px"/>
    <!-- Error Message -->

    <!-- Menu -->
    <VBox fx:id="menuArea" spacing="15.0" alignment="CENTER">
        <Text text="MENU" style="-fx-font-size: 30px; -fx-fill: #32CD32; -fx-font-family: 'Helvetica'; -fx-font-weight: bold"/>
        <ListView fx:id="menu"
                  style="-fx-font-size: 30px; -fx-font-family: 'Helvetica'"
                  minWidth="0" prefWidth="808" maxWidth="808"/>
        <HBox spacing="10.0" alignment="CENTER">
            <Button text="Annulla modifiche" onAction="#restoreMenu"
                    style="-fx-font-size: 30px; -fx-background-color: #FF0000; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Helvetica'; -fx-border-color: #B22222; -fx-border-width: 1;"
                    prefWidth="280"/>
            <Button text="Conferma menu" onAction="#cook"
                    style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Helvetica'; -fx-border-color: #228B22; -fx-border-width: 1;"
                    prefWidth="280"/>
        </HBox>
    </VBox>
    <!-- Menu -->
</VBox>