<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController" style="-fx-background-color: #F5F5DC;">

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Orders and Bill -->
    <TextField fx:id="usernameField" style="-fx-font-size: 14px; -fx-background-color: #E6E6FA;"/>
    <PasswordField fx:id="passwordField" style="-fx-font-size: 14px; -fx-fill: #008000;"/>
    <!-- Orders and Bill -->

    <!-- Commit Button -->
    <Button text="Accedi" onAction="#login" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <!-- Commit Button -->

    <!-- Error Messages -->
    <Text fx:id="loginError" text="Credenziali errate, riprovare" visible="false" fill="red"/>
    <!-- Error Messages -->
</VBox>
