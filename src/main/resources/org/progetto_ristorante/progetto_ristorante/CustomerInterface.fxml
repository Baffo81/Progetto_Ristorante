<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:id="customerInterface"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController" style="-fx-background-color: #F5F5DC;">

    <!-- Logo -->
    <ImageView>
        <Image url="">
        </Image>
        <fitWidth>150.0</fitWidth>
        <fitHeight>150.0</fitHeight>
    </ImageView>
    <!-- Logo -->

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Orders and Bill -->
    <Label fx:id="totalOrderedLabel" text="Ordini Effettuati:" style="-fx-font-size: 18px; -fx-text-fill: #333333;" visible="false"/>
    <TextArea fx:id="totalOrderedArea" style="-fx-font-size: 14px; -fx-background-color: #E6E6FA;" visible="false" editable="false"/>
    <Text fx:id="billText" style="-fx-font-size: 14px; -fx-fill: #008000;" visible="false"/>
    <!-- Orders and Bill -->

    <!-- Required Seats -->
    <Label fx:id="seatsLabel" text="Benvenuto! Di quanti posti hai bisogno?" style="-fx-font-size: 18px; -fx-text-fill: #333333;"/>
    <TextField fx:id="requiredSeatsField" style="-fx-font-size: 14px; -fx-background-color: #E6E6FA;" maxWidth="150"/>
    <Button fx:id="seatsButton" text="Conferma" onAction="#getRequiredSeats" style="-fx-font-size: 14px; -fx-background-color: #32CD32; -fx-text-fill: white;"/>
    <!-- Required Seats -->

    <!-- Menu -->
    <TextArea fx:id="menuArea" wrapText="true" editable="false" visible="false" style="-fx-font-size: 14px; -fx-background-color: #E6E6FA;"/>
    <Label fx:id="orderLabel" text="Scrivi l'ordine che intendi effettuare" visible="false" style="-fx-font-size: 18px; -fx-text-fill: #333333;"/>
    <TextField fx:id="orderField" visible="false" style="-fx-font-size: 14px; -fx-background-color: #E6E6FA;" maxWidth="150"/>
    <!-- Menu -->

    <!-- Commit Button -->
    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="orderButton" text="Conferma Ordine" onAction="#getOrder" visible="false" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="stopButton"  text="Fine" onAction="#closeInterface" visible="false" style="-fx-font-size: 14px; -fx-background-color: #FF6347; -fx-text-fill: white;"/>
    </HBox>
    <!-- Commit Button -->

    <!-- Error Messages -->
    <Text fx:id="unavailableOrder" text="L'ordine non è presente nel menù, riprovare" visible="false" fill="red"/>
    <!-- Error Messages -->
</VBox>
