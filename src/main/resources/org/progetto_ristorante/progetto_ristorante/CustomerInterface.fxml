<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:id="customerInterface"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController" style="-fx-background-color: #F5F5DC;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="seatsLabel" text="Benvenuto, di quanti posti hai bisogno?" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="requiredSeatsField" style="-fx-font-size: 14px" prefWidth="150"/>
    <Button fx:id="seatsButton" text="Conferma" onAction="#getRequiredSeats"/>

    <TextArea fx:id="menuArea" wrapText="true" editable="false" visible="false"/>
    <Label fx:id="orderLabel" text="Scrivi l'ordine che intendi effettuare" visible="false" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="orderField" visible="false" style="-fx-font-size: 14px"/>
    <Button fx:id="orderButton" text="Conferma" onAction="#getOrder" visible="false"/>
    <Label fx:id="unavailableOrder" text="L'ordine non è presente nel menù, riprovare" textFill="red" visible="false"/>
</VBox>
