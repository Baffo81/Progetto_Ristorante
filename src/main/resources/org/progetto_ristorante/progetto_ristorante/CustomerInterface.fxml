<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:id="customerInterface"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController" style="-fx-background-color: #F5F5DC;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Orders and Bill -->
    <Label fx:id="totalOrderedLabel" text="Ordini effettuati:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" visible="false"/>
    <TextArea fx:id="totalOrderedArea" style="-fx-font-size: 14px" visible="false" editable="false"/>
    <Label fx:id="billLabel" text="Conto: 0€" style="-fx-font-size: 16px; -fx-text-fill: #333333;" visible="false"/>
    <Text fx:id="billText" style="-fx-font-size: 14px" visible="false"/>
    <!-- Orders and Bill -->

    <!-- Required Seats -->
    <Label fx:id="seatsLabel" text="Benvenuto, di quanti posti hai bisogno?" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="requiredSeatsField" style="-fx-font-size: 14px"/>
    <Button fx:id="seatsButton" text="Conferma" onAction="#getRequiredSeats"/>
    <!-- Required Seats -->

    <!-- Menu -->
    <TextArea fx:id="menuArea" wrapText="true" editable="false" visible="false"/>
    <Label fx:id="orderLabel" text="Scrivi l'ordine che intendi effettuare" visible="false" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="orderField" visible="false" style="-fx-font-size: 14px"/>
    <!-- Menu -->

    <!-- Commit Button -->
    <Button fx:id="orderButton" text="Conferma" onAction="#getOrder" visible="false"/>
    <!-- Commit Button -->

    <!-- Error Messages -->
    <Label fx:id="unavailableOrder" text="L'ordine non è presente nel menù, riprovare" textFill="red" visible="false"/>
    <!-- Error Messages -->
</VBox>
