<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="5.0" fx:id="chefInterface" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController"
      style="-fx-background-color: white;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Logo
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="images/logo.png"/>
    </ImageView>
    < Logo -->

    <!-- Title -->
    <Text text="Scrivi il menÃ¹" style="-fx-font-size: 28px; -fx-fill: black; -fx-padding: 10 0 20 0;"/>
    <!-- Title -->

    <!-- Order and Price Writing -->
    <HBox spacing="5.0" alignment="CENTER">
        <TextField fx:id="menuOrderField" style="-fx-font-size: 20px; -fx-padding: 20px; -fx-border-radius: 20px; -fx-border-color: grey; -fx-prompt-text-fill: grey; -fx-background-color: white; -fx-font-family: 'sans-serif'"
                   minWidth="0" prefWidth="700" maxWidth="700" promptText="Piatto"/>
        <TextField fx:id="orderPriceField" style="-fx-font-size: 20px; -fx-padding: 20px; -fx-border-radius: 20px; -fx-border-color: grey; -fx-prompt-text-fill: grey; -fx-background-color: white; -fx-font-family: 'sans-serif'"
                   minWidth="0" prefWidth="104" maxWidth="104" promptText="Prezzo"/>
    </HBox>
    <!-- Order and Price Writing -->

    <TextArea fx:id="menuArea" wrapText="true" editable="false"
              style="-fx-font-size: 20px; -fx-border-radius: 20px; -fx-border-color: grey; -fx-padding: 5 5 5 5; -fx-background-color: transparent"
              minWidth="0" prefWidth="814" maxWidth="814"/>

    <!-- Commit Buttons -->
    <HBox spacing="5.0" alignment="CENTER">
        <Button fx:id="commitOrderButton" text="Conferma piatto" onAction="#addOrder" style="-fx-font-size: 20px; -fx-background-radius: 20px; -fx-background-color: #ec3853; -fx-text-fill: white; -fx-font-family: 'sans-serif'" prefWidth="170"/>
        <Button fx:id="stopWriteButton" text="Fine" onAction="#cook"
                style="-fx-font-size: 20px; -fx-border-radius: 20px; -fx-background-color: white; -fx-text-fill: gray; -fx-font-family: 'sans-serif'; -fx-border-color: gray;"
                prefWidth="70"/>
    </HBox>
    <!-- Commit Buttons -->
</VBox>