<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController"
      style="-fx-background-color: #F9F6F7; -fx-padding: 20; -fx-border-color: #E6E1E2; -fx-border-width: 2; -fx-border-radius: 10;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Title -->
    <Text fx:id="chefTitle" text="Personalizza il menu" style="-fx-font-size: 32px; -fx-fill: #228B22; -fx-padding: 10 0 20 0; -fx-font-family: 'Arial'; -fx-font-weight: bold"/>
    <!-- Title -->

    <!-- Order and Price Writing -->
    <HBox fx:id="order" spacing="15.0" alignment="CENTER">
        <TextField fx:id="menuOrderField" style="-fx-font-size: 20px; -fx-padding: 15px; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-prompt-text-fill: #808080; -fx-background-color: #FAEBD7; -fx-font-family: 'Arial'; -fx-border-color: #D2B48C; -fx-border-width: 1;"
                   minWidth="0" prefWidth="700" maxWidth="700" promptText="Piatto"/>
        <TextField fx:id="orderPriceField" style="-fx-font-size: 20px; -fx-padding: 15px; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-prompt-text-fill: #808080; -fx-background-color: #FFDAB9; -fx-font-family: 'Arial'; -fx-text-fill: #333333; -fx-border-color: #D2B48C; -fx-border-width: 1;"
                   minWidth="0" prefWidth="104" maxWidth="104" promptText="Prezzo"/>
    </HBox>
    <!-- Order and Price Writing -->

    <!-- Menu -->
    <ListView fx:id="menuArea"
              style="-fx-font-size: 20px; -fx-padding: 10 10 10 10; -fx-background-color: #FFFFFF; -fx-border-color: #D2B48C; -fx-border-width: 1;"
              minWidth="0" prefWidth="808" maxWidth="808">
    </ListView>
    <!-- Menu -->

    <!-- Commit Buttons -->
    <HBox fx:id="orderButton" spacing="15.0" alignment="CENTER">
        <Button text="Conferma piatto" onAction="#addOrder" style="-fx-font-size: 20px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-border-color: #228B22; -fx-border-width: 1;" prefWidth="180"/>
        <Button text="Conferma menu" onAction="#cook"
                style="-fx-font-size: 20px; -fx-background-color: #4169E1; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-border-color: #1E90FF; -fx-border-width: 1;"
                prefWidth="180"/>
    </HBox>
    <!-- Commit Buttons -->

    <!-- Error Message -->
    <Text fx:id="invalidData" visible="false" fill="#FF0000" style="-fx-font-family: 'Arial'; -fx-font-size: 20px"/>
    <!-- Error Message -->
</VBox>