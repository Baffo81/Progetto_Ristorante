<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-color: #ccc; -fx-border-width: 2; -fx-border-radius: 5;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Order and Price -->
    <HBox spacing="5.0" alignment="CENTER">
        <TextField fx:id="menuOrderField" style="-fx-font-size: 20px; -fx-padding: 20px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-prompt-text-fill: grey; -fx-font-family: 'sans-serif'"
                   minWidth="0" prefWidth="700" maxWidth="700" promptText="Piatto"/>
        <TextField fx:id="orderPriceField" style="-fx-font-size: 20px; -fx-padding: 20px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-prompt-text-fill: gray; -fx-font-family: 'sans-serif'"
                   minWidth="0" prefWidth="104" maxWidth="104" promptText="Prezzo"/>
    </HBox>
    <!-- Order and Price -->

    <!-- Menu -->
    <TextArea fx:id="menu" wrapText="true" editable="false"
              style="-fx-font-size: 20px; -fx-border-color: #ccc; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-padding: 6 6 6 6; -fx-background-color: white;"
              minWidth="0" prefWidth="808" maxWidth="808"/>
    <!-- Menu -->

    <!-- Buttons -->
    <HBox spacing="5.0" alignment="CENTER">
        <Button fx:id="commitOrderButton" text="Conferma piatto" onAction="#addOrder" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-family: 'sans-serif'" prefWidth="180"/>
        <Button fx:id="stopWriteButton" text="Fine" onAction="#cook"
                style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-family: 'sans-serif'"
                prefWidth="70"/>
    </HBox>
    <!-- Buttons -->

    <!-- Error Message -->
    <Text fx:id="invalidData" visible="false" fill="red"/>
    <!-- Error Message -->
</VBox>