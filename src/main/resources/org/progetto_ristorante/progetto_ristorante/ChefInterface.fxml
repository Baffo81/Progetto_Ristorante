<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.ChefController" style="-fx-background-color: #F5F5DC;">

    <!-- Logo -->
    <ImageView>
        <Image url=""/>
        <fitWidth>150.0</fitWidth>
        <fitHeight>150.0</fitHeight>
    </ImageView>
    <!-- Logo -->

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Order's Writing -->
    <Label text="Inserisci il nome del piatto da inserire nel menÃ¹ o fine per terminare" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="menuOrderField" style="-fx-font-size: 14px" maxWidth="150"/>
    <!-- Order's Writing -->

    <!-- Price's Writing -->
    <Label text="Indica il prezzo dell'ordine" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
    <TextField fx:id="orderPriceField" style="-fx-font-size: 14px" maxWidth="150"/>
    <!-- Price's Writing -->

    <!-- Commit Buttons -->
    <Button text="Conferma" onAction="#addOrder"/>
    <Button text="Fine"     onAction="#cook"/>
    <!-- Commit Buttons -->
</VBox>
