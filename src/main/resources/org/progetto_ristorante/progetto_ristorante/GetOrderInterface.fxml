<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ListView?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #F9F6F7; -fx-padding: 20; -fx-border-color: #D2B48C; -fx-border-width: 2; -fx-border-radius: 10;">

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Orders and Bill -->
    <HBox spacing="10.0" alignment="CENTER">
        <Text text="TAVOLO: " style="-fx-font-size: 14px; -fx-fill: #333333; -fx-font-family: 'Arial'"/>
        <Text fx:id="tableNumber" style="-fx-font-size: 14px; -fx-fill: #008000; -fx-font-family: 'Arial'; -fx-font-weight: bold"/>
    </HBox>

    <HBox spacing="10.0" alignment="CENTER">
        <Text text="CONTO: " style="-fx-font-size: 14px; -fx-fill: #333333; -fx-font-family: 'Arial'"/>
        <Text fx:id="billText" style="-fx-font-size: 14px; -fx-fill: #008000; -fx-font-family: 'Arial'; -fx-font-weight: bold"/>
    </HBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Text text="ORDINI EFFETTUATI" style="-fx-font-size: 18px; -fx-text-fill: #333333; -fx-font-family: 'Arial'; -fx-font-weight: bold"/>
        <ListView fx:id="totalOrderedArea" style="-fx-font-size: 14px; -fx-background-color: #FAEBD7; -fx-font-family: 'Arial'; -fx-pref-width: 400px; -fx-border-color: #D2B48C; -fx-border-width: 1; -fx-border-radius: 10;"/>
    </VBox>
    <!-- Orders and Bill -->

    <!-- Menu -->
    <VBox spacing="10.0" alignment="CENTER">
        <Text text="MENU" style="-fx-font-size: 18px; -fx-text-fill: #333333; -fx-font-family: 'Arial'; -fx-font-weight: bold"/>
        <ListView fx:id="menu" style="-fx-font-size: 14px; -fx-background-color: #FAEBD7; -fx-pref-width: 400px; -fx-border-color: #D2B48C; -fx-border-width: 1; -fx-border-radius: 10;"/>
    </VBox>
    <!-- Menu -->

    <!-- Stop Button -->
    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="stopButton" text="Chiedi il conto" onAction="#askBill" style="-fx-font-size: 16px; -fx-background-color: #D2B48C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-border-color: #D2B48C; -fx-border-width: 1; -fx-border-radius: 10;"/>
    </HBox>
    <!-- Stop Button -->

    <!-- Error Message -->
    <Text fx:id="unavailableWaiter" visible="false" fill="#FF0000" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
    <!-- Error Message -->
</VBox>
