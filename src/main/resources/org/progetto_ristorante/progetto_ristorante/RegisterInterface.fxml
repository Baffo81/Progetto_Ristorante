<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-color: #ccc; -fx-border-width: 2; -fx-border-radius: 5;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Title -->
    <Text text="REGISTRAZIONE" style="-fx-font-size: 28px; -fx-fill: #008000; -fx-padding: 10 0 20 0;"/>
    <!-- Title -->

    <!-- Username and Password -->
    <TextField fx:id="registerUsername"     promptText="Username" style="-fx-font-size: 14px; -fx-background-color: #fff; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" maxWidth="150"/>
    <PasswordField fx:id="registerPassword" promptText="Password" style="-fx-font-size: 14px; -fx-background-color: #fff; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" maxWidth="150"/>
    <!-- Username and Password -->

    <!-- Commit Buttons -->
    <HBox spacing="5.0" alignment="CENTER">
        <Button text="Registrati" onAction="#register" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
        <Button text="Accedi" onAction="#showLoginInterface" style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
    </HBox>
    <!-- Commit Buttons -->

    <!-- Error Messages -->
    <Text fx:id="registerError" visible="false" fill="red"/>
    <!-- Error Messages -->
</VBox>
